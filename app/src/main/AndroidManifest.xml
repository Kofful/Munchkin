<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.munchkin">

    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="true" />
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".settings.AvatarActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".settings.SettingsActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".lobby.LobbyActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".register.RegisterActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".findinglobby.FindingServiceActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".creatinglobby.CreatingLobbyActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/noAnimationTheme" />
    </application>

</manifest>